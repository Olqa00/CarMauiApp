<ContentPage
    x:Class="CarMauiApp.Maui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:CarMauiApp.Application.Models;assembly=CarMauiApp.Application"
    xmlns:viewModel="clr-namespace:CarMauiApp.Maui.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewModel:CarListViewModel">

    <Grid
        Padding="5"
        ColumnSpacing="1"
        RowSpacing="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <VerticalStackLayout
            Grid.Row="0"
            Margin="9"
            Padding="5">
            <Entry
                x:Name="Make"
                Placeholder="Enter Make"
                Text="{Binding Make}" />
            <Entry
                x:Name="Model"
                Placeholder="Enter Model"
                Text="{Binding Model}" />
            <Entry
                x:Name="Vin"
                Placeholder="Enter Vin"
                Text="{Binding Vin}" />
        </VerticalStackLayout>

        <Button
            Grid.Row="1"
            Margin="9"
            Command="{Binding AddCarAsyncCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Add Car" />

        <Button
            Grid.Row="2"
            Margin="9"
            Command="{Binding GetCarListAsyncCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Fetch Cars" />

        <RefreshView
            Grid.Row="4"
            Command="{Binding GetCarListAsyncCommand}"
            IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Cars}" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:CarModel">
                        <Grid Padding="10" ColumnDefinitions="*, Auto">
                            <Border Grid.Column="0" HeightRequest="70">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:CarListViewModel}}, Path=GetCarDetailsAsyncCommand}" CommandParameter="{Binding Id}" />
                                </Border.GestureRecognizers>
                                <HorizontalStackLayout Padding="10" Spacing="5">
                                    <Label Text="{Binding Make}" />
                                    <Label Text="{Binding Model}" />
                                </HorizontalStackLayout>
                            </Border>
                            <HorizontalStackLayout Grid.Column="1">
                                <Button
                                    Margin="9"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:CarListViewModel}}, Path=.}"
                                    CommandParameter="{Binding Id}"
                                    Text="Update" />
                                <Button
                                    Margin="9"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:CarListViewModel}}, Path=DeleteCarAsyncCommand}"
                                    CommandParameter="{Binding Id}"
                                    Text="Delete" />
                            </HorizontalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

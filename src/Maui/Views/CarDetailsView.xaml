<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CarMauiApp.Maui.Views.CarDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:CarMauiApp.Maui.ViewModels"
    Title="{Binding CarModel.Make}"
    x:DataType="vm:CarDetailsViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{Binding CarModel.Vin}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>